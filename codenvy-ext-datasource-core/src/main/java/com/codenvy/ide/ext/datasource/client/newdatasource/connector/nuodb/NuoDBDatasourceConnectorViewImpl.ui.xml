<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'>

    <ui:with field='res' type='com.codenvy.ide.Resources' />
    <ui:style>
        .spacing {
            margin-bottom: 6px;
        }
        .buttonMarginLeft {
            margin-left: 8px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" addStyleNames="{res.coreCss.mainText} {style.spacing}">
                <g:west size="90.0">
                    <g:Label text="Name" height="18px" addStyleNames="{res.coreCss.mainBoldFont}" />
                </g:west>
                <g:center>
                    <g:TextBox ui:field="dbName" width="97%" height="16px" />
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="200.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.coreCss.mainText} {style.spacing}">
                <g:west size="90.0">
                    <g:Label text="Brokers" height="18px" addStyleNames="{res.coreCss.mainBoldFont}" />
                </g:west>
                <g:east size="150">
                    <g:DockLayoutPanel unit="PX">
                        <g:north size="30">
                            <g:Button ui:field="addBrokerButton"  width="8em" text="Add broker" addStyleNames="{style.buttonMarginLeft}" />
                        </g:north>
                        <g:north size="30">
                            <g:Button ui:field="deleteBrokersButton" width="8em" text="Delete brokers" addStyleNames="{style.buttonMarginLeft}" />
                        </g:north>
                    </g:DockLayoutPanel>
                </g:east>
                <g:center>
                    <c:CellTable ui:field="brokerList" width="100%" addStyleNames="{res.coreCss.mainText} {style.spacing}" />
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.coreCss.mainText} {style.spacing}">
                <g:west size="90.0">
                    <g:Label text="Username" height="18px" addStyleNames="{res.coreCss.mainBoldFont}" />
                </g:west>
                <g:center>
                    <g:TextBox ui:field="usernameField" width="97%" height="16px" />
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
        <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.coreCss.mainText} {style.spacing}">
            <g:west size="90.0">
                <g:Label text="Password" height="18px" addStyleNames="{res.coreCss.mainBoldFont}" />
            </g:west>
            <g:center>
                <g:PasswordTextBox ui:field="passwordField" width="97%" height="16px" />
            </g:center>
        </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" >
                <g:east size="127" >
                    <g:Button ui:field="testConnectionButton" text="Test Connection" />
                </g:east>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>