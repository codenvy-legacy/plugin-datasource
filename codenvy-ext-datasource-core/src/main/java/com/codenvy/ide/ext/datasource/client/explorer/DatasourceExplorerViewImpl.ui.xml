<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.codenvy.ide.ui.tree'>

    <ui:with field="datasourceUiResources" type="com.codenvy.ide.ext.datasource.client.DatasourceUiResources" />

    <g:DockLayoutPanel unit="PX" ui:field="mainContainer">
        <g:north size="40">
            <g:DockLayoutPanel unit="PX" addStyleNames="{datasourceUiResources.datasourceUiCSS.explorerTopPanel}">
                <g:center>
                    <g:ListBox ui:field="datasourceListBox" addStyleNames="{datasourceUiResources.datasourceUiCSS.explorerDatasourceList}" />
                </g:center>
                <g:east size="40">
                    <g:PushButton ui:field="refreshButton" addStyleNames="{datasourceUiResources.datasourceUiCSS.explorerRefreshButton}" />
                </g:east>
            </g:DockLayoutPanel>
        </g:north>
        <g:center>
            <g:SplitLayoutPanel ui:field="splitPanel">
                <g:south size="200">
                    <g:SimpleLayoutPanel ui:field="propertiesContainer" />
                </g:south>
                <g:center>
                    <my:Tree ui:field="tree" />
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>