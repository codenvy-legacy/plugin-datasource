<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='res' type='com.codenvy.ide.Resources' />
    <ui:with field="datasourceUiResources" type="com.codenvy.ide.ext.datasource.client.DatasourceUiResources" />
    <ui:style type="com.codenvy.ide.ext.datasource.client.newdatasource.view.NewDatasourceWizardMainPageViewImpl.Style">
        .mainPanel{
            margin: 14px;
            border: none !important;
            /*height: 412px;*/
            box-shadow: 1px 0px 0 0 #585858;
            top: 0;
            left: 0;
            bottom: 0;
        }
        
        @eval bgColor com.codenvy.ide.api.ui.theme.Style.getTabBorderColor();
        .categories{
            border: 1px solid bgColor;
            margin-right: 25px;
            background-color: #313131;
            margin-top: 10px;
        }
        
        .hard{
            border-style:solid;
			border-color:#ff0000 #0000ff;
        }
        
		.marginLeft{
			margin-top: 14px;
            margin-left: 5px;
        }
        
    </ui:style>
   	   <g:DockLayoutPanel unit="PX" addStyleNames="{style.mainPanel}" height="100%">
       	 <g:north size="45.0">
            <g:Label text="Datasource" addStyleNames="{res.coreCss.mainBoldFont},{style.marginLeft}" height="100%" />
         </g:north>
         <g:center>
            <g:SimplePanel ui:field="datasourceCategoriesPanel" addStyleNames="{style.categories}" debugId="datasource-categoriesPanel"/>
         </g:center>
         <g:south size="40">
         	<g:SimplePanel />
         </g:south>
      </g:DockLayoutPanel>
</ui:UiBinder>